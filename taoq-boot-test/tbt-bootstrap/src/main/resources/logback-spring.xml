    <!-- 本地开发环境 -->
    <springProfile name="local-dev">
        <root level="INFO">
            <appender-ref ref="ASYNC-STDOUT"/>
            <appender-ref ref="ASYNC-FILE"/>
        </root>
        <logger name="com.sr.lsw">
            <level value="DEBUG"/>
        </logger>
        <logger name="tech.taoq.websocket.handle.WebSocketUtil">
            <level value="ERROR"/>
        </logger>
    </springProfile>

    <!-- 生产环境 -->
    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="ASYNC-STDOUT"/>
            <appender-ref ref="ASYNC-FILE"/>
            <!--<appender-ref ref="ASYNC-LOKI"/>-->
        </root>
        <logger name="com.keqi.tbt">
