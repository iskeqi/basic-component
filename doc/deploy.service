[Unit]
Description=TAOQ-DEMO
# 需要在 network.target 后,才启动
# 需要在 mysql.service 后,才启动,应该这样写:After=mysql.service
After=network.target

[Service]
# 后台启动程序
Type=forking
# systemctl start 时,执行的命令
ExecStart=/bin/bash /data/soft/test/deploy.sh start
# systemctl stop 时,执行的命令
ExecStop=/bin/bash /data/soft/test/deploy.sh stop
# systemctl restart 时,执行的命令
ExecReload=/bin/bash /data/soft/test/deploy.sh restart

[Install]
WantedBy=multi-user.target
